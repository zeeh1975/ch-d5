<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/header'); %>
</head>

<body>
  <section class="position-relative py-4 py-xl-5">
    <div class="container position-relative">
      <div class="row d-flex justify-content-center">
        <div class="col8">
          <div class="card">
            <h2 class="text-center mb-4">Lista de productos (EJS)</h2>
            <br>

            <% if (productos.length) { %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Precio</th>
                      <th>Imagen</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% productos.forEach(producto=> { %>
                      <tr>
                        <td>
                          <%= producto.title %>
                        </td>
                        <td>
                          <p style="text-align: right">
                            <%= "$" +producto.price %>
                          </p>
                        </td>
                        <td><img width="50" src=<%=producto.thumbnail %> alt="Imagen no encontrada"></td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <h3 class="alert alert-warning">No hay productos</h3>
                <% } %>
                  <br>
                  <a href="/" type="button" class="btn btn-primary btn-lg">Volver al formulario de carga</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>